<div class="row">
  <div class="col-xs-6">
    <h2>{{model.meta.total}} Feeds</h2>
  </div>
  <div class="col-xs-6 text-right">
    {{#link-to 'feeds.bulk-add' class="btn btn-default"}}Bulk Add Feeds{{/link-to}}
  </div>
</div>

{{#collapsable-panel title="Filter Feeds" panelClass="panel-primary" show=true}}
  {{feed-controls
      active_feed_version_update=active_feed_version_update
      active_feed_version_expired=active_feed_version_expired
      active_feed_version_valid=active_feed_version_valid
      active_feed_version_import_level=active_feed_version_import_level
      latest_fetch_exception=latest_fetch_exception
      latest_feed_version_import_status=latest_feed_version_import_status
      tag_key=tag_key
      tag_value=tag_value
  }}
{{/collapsable-panel}}

{{feeds-table feeds=model}}

{{pagination-controls route="feeds" hasPreviousPage=hasPreviousPage hasNextPage=hasNextPage previousOffset=previousOffset nextOffset=nextOffset perPage=per_page}}
