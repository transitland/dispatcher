<div class="row">
  <div class="col-md-6">
    <h2>{{model.meta.total}} {{if applied "Applied" "Unapplied"}} Changesets</h2>
  </div>
  <div class="col-md-6 text-right">
    {{#link-to 'changesets.new' class="btn btn-primary" }}New Changeset{{/link-to}}
  </div>
</div>

<div class="btn-toolbar" role="toolbar">
  <div class="btn-group" role="group">
    {{toggle-button attr=applied text="not yet applied" value=false}}
    {{toggle-button attr=applied text="already applied" value=true}}
  </div>
</div>

{{changeset-list changesets=model}}

{{pagination-controls route="changesets" hasPreviousPage=hasPreviousPage hasNextPage=hasNextPage previousOffset=previousOffset nextOffset=nextOffset}}
