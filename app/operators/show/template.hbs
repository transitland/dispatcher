<h2>{{link-to 'Operators' 'operators'}} / {{model.onestop_id}}</h2>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd>{{model.name}}</dd>
  <dt>Short name</dt>
  <dd>{{model.short_name}}</dd>
  <dt>Represented in Feeds</dt>
  <dd>
    <ul>
      {{#each model.feeds as |feed|}}
        <li>{{link-to feed.onestop_id 'feeds.show' feed.onestop_id}}</li>
      {{/each}}
    </ul>
  </dd>
  <dt>Country</dt>
  <dd>
    {{model.country}}
    {{#link-to 'operators' (query-params country=model.country state="null" metro="null" tag_key="null" tag_value="null")}}
      {{fa-icon "search-plus"}}
    {{/link-to}}
  </dd>
  <dt>State</dt>
  <dd>
    {{model.state}}
    {{#link-to 'operators' (query-params country="null" state=model.state metro="null" tag_key="null" tag_value="null")}}
      {{fa-icon "search-plus"}}
    {{/link-to}}
  </dd>
  <dt>Metro</dt>
  <dd>
    {{model.metro}}
    {{#link-to 'operators' (query-params country="null" state="null" metro=model.metro tag_key="null" tag_value="null")}}
      {{fa-icon "search-plus"}}
    {{/link-to}}
  </dd>
  <dt>Tags</dt>
  <dd>
    {{#each-in model.tags as |key value|}}
      {{key}}: {{value}} <br />
    {{/each-in}}
  </dd>
  <dt>Links</dt>
  <dd><a href="https://transit.land/feed-registry/operators/{{model.onestop_id}}">
        {{fa-icon "external-link"}} View in Feed Registry</a></dd>
</dl>