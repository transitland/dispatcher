<div class="row">
  <div class="col-md-6">
    <h2>{{model.meta.total}} Users</h2>
  </div>
  <div class="col-md-6 text-right">
    {{#link-to 'users.new' class="btn btn-primary" }}New User{{/link-to}}
  </div>
</div>

<div class="list-group">
  {{#each model as |user|}}
    {{#link-to 'users.show' user class="list-group-item" }}
      <h4 class="list-group-item-heading">{{user.name}}</h4>
      <p class="list-group-item-text">{{user.email}}</p>
    {{/link-to}}
  {{else}}
    <p>No users.</p>
  {{/each}}
</div>

{{pagination-controls route="users" hasPreviousPage=hasPreviousPage hasNextPage=hasNextPage previousOffset=previousOffset nextOffset=nextOffset perPage=per_page}}
